<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeMnf"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <ImageView
            android:id="@+id/viewMnfImage"
            android:layout_width="153dp"
            android:layout_height="126dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="64dp"
            android:layout_marginLeft="125dp"
            android:src="@drawable/no_image_selected" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="83dp"
            android:layout_height="28dp"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="60dp"
            android:layout_below="@id/viewMnfImage"
            android:text="SSM Number" />

        <TextView
            android:id="@+id/viewMnfID"
            android:layout_width="200dp"
            android:layout_height="28dp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@id/viewMnfImage"
            android:layout_toRightOf="@id/textView7"
            android:text="SSM NUMBER" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="83dp"
            android:layout_height="28dp"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="30dp"
            android:layout_below="@id/textView7"
            android:text="Email" />

        <TextView
            android:id="@+id/viewMnfEmail"
            android:layout_width="200dp"
            android:layout_height="28dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@id/viewMnfID"
            android:layout_toRightOf="@id/textView9"
            android:text="EMAIL" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="83dp"
            android:layout_height="28dp"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="30dp"
            android:layout_below="@id/textView9"
            android:text="Name" />

        <TextView
            android:id="@+id/viewMnfName"
            android:layout_width="200dp"
            android:layout_height="28dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@id/viewMnfEmail"
            android:layout_toRightOf="@id/textView11"
            android:text="NAME" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="83dp"
            android:layout_height="28dp"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="30dp"
            android:layout_below="@id/textView11"
            android:text="Description" />

        <TextView
            android:id="@+id/viewMnfDesc"
            android:layout_width="200dp"
            android:layout_height="28dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@id/viewMnfName"
            android:layout_toRightOf="@id/textView13"
            android:text="DESCRIPTION" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="83dp"
            android:layout_height="28dp"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="30dp"
            android:layout_below="@id/textView13"
            android:text="Contact" />

        <TextView
            android:id="@+id/viewMnfPhone"
            android:layout_width="200dp"
            android:layout_height="28dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@id/viewMnfDesc"
            android:layout_toRightOf="@id/textView15"
            android:text="CONTACT" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="83dp"
            android:layout_height="28dp"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="30dp"
            android:layout_below="@id/textView15"
            android:text="Address" />

        <TextView
            android:id="@+id/viewMnfAddress"
            android:layout_width="200dp"
            android:layout_height="28dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@id/viewMnfPhone"
            android:layout_toRightOf="@id/textView17"
            android:text="ADDRESS" />


    </RelativeLayout>

</LinearLayout>