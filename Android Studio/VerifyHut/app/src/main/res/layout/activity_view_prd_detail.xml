<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imagePrd"
            android:layout_width="153dp"
            android:layout_height="126dp"
            android:layout_marginTop="52dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_menu_gallery" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="83dp"
            android:layout_height="28dp"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="36dp"
            android:text="Barcode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imagePrd" />

        <TextView
            android:id="@+id/viewPrdID"
            android:layout_width="152dp"
            android:layout_height="28dp"
            android:layout_marginTop="36dp"
            android:text="BARCODE"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.192"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/imagePrd" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="83dp"
            android:layout_height="28dp"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="24dp"
            android:text="Name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/viewPrdName"
            android:layout_width="152dp"
            android:layout_height="28dp"
            android:layout_marginTop="24dp"
            android:text="PRODUCT NAME"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toEndOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/viewPrdID" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="83dp"
            android:layout_height="28dp"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="16dp"
            android:text="Brand"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <TextView
            android:id="@+id/viewPrdBrand"
            android:layout_width="152dp"
            android:layout_height="28dp"
            android:layout_marginTop="16dp"
            android:text="BRAND"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.204"
            app:layout_constraintStart_toEndOf="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/viewPrdName" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="83dp"
            android:layout_height="28dp"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="20dp"
            android:text="Description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <TextView
            android:id="@+id/viewPrdDesc"
            android:layout_width="152dp"
            android:layout_height="28dp"
            android:layout_marginTop="20dp"
            android:text="DESCRIPTION"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toEndOf="@+id/textView13"
            app:layout_constraintTop_toBottomOf="@+id/viewPrdBrand" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="83dp"
            android:layout_height="28dp"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="24dp"
            android:text="Type"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView13" />

        <TextView
            android:id="@+id/viewPrdType"
            android:layout_width="152dp"
            android:layout_height="28dp"
            android:layout_marginTop="24dp"
            android:text="TYPE"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.204"
            app:layout_constraintStart_toEndOf="@+id/textView15"
            app:layout_constraintTop_toBottomOf="@+id/viewPrdDesc" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="83dp"
            android:layout_height="28dp"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="20dp"
            android:text="Ingredient"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView15" />

        <TextView
            android:id="@+id/viewPrdIngredient"
            android:layout_width="152dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:text="INGREDIENT"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.196"
            app:layout_constraintStart_toEndOf="@+id/textView17"
            app:layout_constraintTop_toBottomOf="@+id/viewPrdType" />

        <TextView
            android:id="@+id/viewPrdHalal"
            android:layout_width="152dp"
            android:layout_height="28dp"
            android:layout_marginTop="20dp"
            android:text="HALAL REFERENCE"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.196"
            app:layout_constraintStart_toEndOf="@+id/textVieww"
            app:layout_constraintTop_toBottomOf="@+id/viewPrdIngredient"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textVieww"
            android:layout_width="83dp"
            android:layout_height="28dp"
            android:text="Halal Ref."
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.134"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView17"
            app:layout_constraintVertical_bias="0.241" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>