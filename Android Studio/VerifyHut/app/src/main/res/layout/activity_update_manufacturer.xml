<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/gradient3"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Manufacturer Record"
            android:textSize="17dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.043" />


        <ImageView
            android:id="@+id/mnfImg"
            android:layout_width="145dp"
            android:layout_height="128dp"
            android:src="@drawable/no_image_selected"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.196" />

        <EditText
            android:id="@+id/mnfSsm"
            android:layout_width="332dp"
            android:layout_height="52dp"
            android:ems="10"
            android:hint="SSM Number"
            android:background="@color/cardview_light_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mnfImg"
            app:layout_constraintVertical_bias="0.086" />

        <EditText
            android:id="@+id/mnfEmail"
            android:layout_width="332dp"
            android:layout_height="52dp"
            android:layout_marginTop="8dp"
            android:background="@color/cardview_light_background"
            android:ems="10"
            android:hint="Email"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mnfSsm" />

        <EditText
            android:id="@+id/mnfName"
            android:layout_width="332dp"
            android:layout_height="52dp"
            android:layout_marginTop="8dp"
            android:background="@color/cardview_light_background"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mnfEmail" />

        <EditText
            android:id="@+id/mnfDesc"
            android:layout_width="332dp"
            android:layout_height="52dp"
            android:layout_marginTop="8dp"
            android:background="@color/cardview_light_background"
            android:ems="10"
            android:hint="Description"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mnfName" />

        <EditText
            android:id="@+id/mnfPhone"
            android:layout_width="332dp"
            android:layout_height="52dp"
            android:layout_marginTop="8dp"
            android:background="@color/cardview_light_background"
            android:ems="10"
            android:hint="Phone Number"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mnfDesc" />

        <EditText
            android:id="@+id/mnfAddress"
            android:layout_width="332dp"
            android:layout_height="52dp"
            android:layout_marginTop="8dp"
            android:background="@color/cardview_light_background"
            android:ems="10"
            android:hint="Address"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mnfPhone" />

        <ImageView
            android:id="@+id/btnImgChoose"
            android:layout_width="34dp"
            android:layout_height="42dp"
            android:layout_marginTop="83dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/mnfSsm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.141"
            app:layout_constraintStart_toEndOf="@+id/mnfImg"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintVertical_bias="0.683"
            app:srcCompat="@android:drawable/sym_contact_card" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>